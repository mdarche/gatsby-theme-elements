{
  "private": true,
  "scripts": {
    "clean": "lerna run clean",
    "git-clean": "git clean -fXd -e \\!node_modules -e \\!node_modules/**/*",
    "test": "lerna run test",
    "docs-dev": "cd docs && yarn develop",
    "docs-build": "cd docs && yarn build",
    "git-reset": "git reset --hard HEAD"
  },
  "workspaces": [
    "examples/*",
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "@testing-library/dom": "^7.26.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^26.0.4",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "cross-env": "^7.0.2",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "jest-emotion": "^10.0.27",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "tsdx": "^0.13.2",
    "typescript": "^3.9.6"
  },
  "jest": {
    "globals": {
      "__DEV__": "boolean"
    },
    "testMatch": [
      "**/packages/**/test/*.test.tsx"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^16.13.1"
  }
}
